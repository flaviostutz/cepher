{
    "description": "Ceph RBD volume plugin",
    "documentation": "https://github.com/flaviostutz/cepher",
    "entrypoint": [
        "/startup.sh"
    ],
    "env": [
        {
            "name": "MONITOR_HOSTS",
            "settable": [
                "value"
            ]
        }, {
            "name": "CEPH_KEYRING_BASE64",
            "settable": [
                "value"
            ]
        }, {
            "name": "ETCD_URL",
            "settable": [
                "value"
            ]
        }, {
            "name": "CEPH_AUTH",
            "settable": [
                "value"
            ]
        }, {
            "name": "CEPH_USER",
            "settable": [
                "value"
            ]
        }, {
            "name": "CEPH_CLUSTER_NAME",
            "settable": [
                "value"
            ]
        }, {
            "name": "ENABLE_AUTO_CREATE_VOLUMES",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_IMAGE_SIZE",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_IMAGE_FS",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_POOL_NAME",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_POOL_CREATE",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_POOL_PG_NUM",
            "settable": [
                "value"
            ]
        }, {
            "name": "DEFAULT_POOL_QUOTA_MAX_BYTES",
            "settable": [
                "value"
            ]
        }, {
            "name": "LOG_LEVEL",
            "Description": "One of debug, info, warning or error",
            "settable": [
                "value"
            ]
        }
    ],
    "interface": {
        "socket": "cepher.sock",
        "types": [
            "docker.volumedriver/1.0"
        ]
    },
    "linux": {
        "AllowAllDevices": true,
        "capabilities": [
            "CAP_SYS_ADMIN",
            "CAP_SYS_MODULE"
        ],
        "devices": null
    },
    "mounts": [{
            "source": "/lib/modules",
            "destination": "/lib/modules",
            "type": "bind",
            "options": [
                "rbind"
            ]
        },
        {
            "source": "/dev",
            "destination": "/dev",
            "type": "bind",
            "options": [
                "shared",
                "rbind"
            ]
        },
        {
            "source": "/sys",
            "destination": "/sys",
            "type": "bind",
            "options": [
                "rbind"
            ]
        }
    ],
    "network": {
        "type": "host"
    },
    "propagatedmount": "/mnt/cepher"
}
